<div class="large-12 large-centered columns">
	<div class="row">
		<div class="large-8 columns">
			<h3>Fannie Mae Loan Program  <br><span class="subheader">Indicative Terms:</span></h3>

		</div>
		<div class="large-4 columns">
			<p><%= link_to "Download a PDF Copy", "https://s3.amazonaws.com/lighthouse_commercial_production/loan_programs/fannie_mae_program.pdf", target: "_blank" %></p>
		</div>
	</div>
	<div class="row">
		<div class="large-12 columns">
			<ul class="inline-list">
				<li><div class="property_type"><h5 style=" padding:7px;">Apartments</h5></div></li>
				<li><div class="property_type"><h5 style=" padding:7px;">Mixed Use</h5></div></li>
				<li><div class="property_type"><h5 style=" padding:7px;">Mobile Home Parks</h5></div></li>
				<li><div class="property_type"><h5 style=" padding:7px;">Senior Housing</h5></div></li>
				<li><div class="property_type"><h5 style=" padding:7px;">Student Housing</h5></div></li>
			</ul>
		</div>
	</div>
	<table>
	  <tbody>
	    <tr>
	      <td class="lead">Loan Amount</td>
	      <td class="lead spec">$750,000 and up</td>
	    </tr>
			<tr>
	      <td class="lead">Loan-to-Value</td>
	      <td class="lead spec">80% Maximum</td>
	    </tr>
			<tr>
	      <td class="lead">Minimum DSCR</td>
	      <td class="lead spec">1.25 (may be lower for low LTV loans)</td>
	    </tr>
			<tr>
	      <td class="lead">Loan Term</td>
	      <td class="lead spec">5, 7, 10, 12, 15 and 30 Years</td>
	    </tr>
			<tr>
	      <td class="lead">Amortization</td>
	      <td class="lead spec">15-30 Years (I/O available on a select basis)</td>
	    </tr>
			<tr>
	      <td class="lead">Origination Fee</td>
	      <td class="lead spec">Customary 1%</td>
	    </tr>
			<tr>
	      <td class="lead">Borrowing Entity</td>
	      <td class="lead spec">A bankruptcy-remote Special Purpose Entity</td>
	    </tr>
			<tr>
	      <td class="lead">Recourse</td>
	      <td class="lead spec">Non-recourse, excluding the usual 'bad boy' carve outs</td>
	    </tr>
			<tr>
	      <td class="lead">Reserves</td>
	      <td class="lead spec">Required for Replacements, Tenant Improvements & Leasing Commissions</td>
	    </tr>
			<tr>
	      <td class="lead">Prepayment</td>
	      <td class="lead spec">Yield maintenance after a lockout period</td>
	    </tr>
			<tr>
	      <td class="lead">Assumability</td>
	      <td class="lead spec">1% for qualifying borrowers</td>
	    </tr>
			<tr>
	      <td class="lead">Ownership Transfers</td>
	      <td class="lead spec">Very limited, except for estate planning purposes</td>
	    </tr>
			<tr>
	      <td class="lead">Cash Mgmt.</td>
	      <td class="lead spec">Lock box is usually required and will be Springing or Hard</td>
	    </tr>
	  </tbody>
	</table>
</div>